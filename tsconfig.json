{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",                                
    "rootDir": "./src",                                  
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
}
